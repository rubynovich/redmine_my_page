%h3
  = l(:label_reported_issues)
  = "(#{Issue.visible.open.count(:conditions => { :author_id => User.current.id })})"

- reported_issues = Issue.visible.open.find(:all, :conditions => { :author_id => User.current.id }, :limit => 10, :include => [ :status, :project, :tracker, :priority ], :order => "#{IssuePriority.table_name}.position DESC, #{Issue.table_name}.updated_on DESC")

= render :partial => 'list_simple', :locals => { :issues => reported_issues, :allows => [:assigned_to] }

- if reported_issues.length > 0
  %p.small
    = link_to l(:label_issue_view_all), :controller => 'issues', :action => 'index', :set_filter => 1, :author_id => 'me', :sort => 'priority:desc,updated_on:desc'

- content_for :header_tags do
  = auto_discovery_link_tag(:atom, {:controller => 'issues', :action => 'index', :set_filter => 1, :author_id => 'me', :format => 'atom', :key => User.current.rss_key}, {:title => l(:label_reported_issues)})
